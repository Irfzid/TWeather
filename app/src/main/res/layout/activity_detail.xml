<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lapis"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="325dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_daycond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="condition"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/image_cond2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_maxtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max temp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"/>

        <TextView
            android:id="@+id/tv_maxtemp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="210dp"/>

        <TextView
            android:id="@+id/tv_mintemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Temp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="290dp"/>

        <TextView
            android:id="@+id/tv_mintemp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="290dp"/>

        <TextView
            android:id="@+id/tv_totprec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Precip"
            android:textColor="@color/white"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/tv_totprec2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/tv_avtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg Temp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/tv_avtemp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/tv_maxwind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind Speed"
            android:textColor="@color/white"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="210dp"/>

        <TextView
            android:id="@+id/tv_maxwind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="210dp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fcastdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="325dp"
        tools:listitem="@layout/row_detail" />


</RelativeLayout>